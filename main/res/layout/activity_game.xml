<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".GameActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome your name!"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/text_process"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="1/5"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <SeekBar
            android:id="@+id/bar_process"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:progressDrawable="@drawable/seekbar_shape"
            android:thumb="@drawable/thumb"
            android:maxHeight="21dp"
            android:splitTrack="false"
            android:thumbOffset="-3dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/text_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android question title:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/text_question_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qusetion details go here ---------"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/text_question_B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qusetion details go here ---------"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/text_question_C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qusetion details go here ---------"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/btn_ans1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/answerbtn_shape"
            android:textAllCaps="false"
            android:text="A"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/btn_ans2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/answerbtn_shape"
            android:textAllCaps="false"
            android:text="B"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/btn_ans3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/answerbtn_shape"
            android:textAllCaps="false"
            android:text="C"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_shape"
            android:textAllCaps="false"
            android:text="Submit"
            android:textSize="24dp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>